@model User

<h2 class="text-center">Регистрация</h2>

<div>
    <div class="card col-5 text-center m-auto">

        <div class="card-body text-center">
            <form class="text-center m-auto" asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="All"></div>
                <div class="row justify-content-center">
                    <label class="text-center">Введите имя пользователя:</label>
                </div>
                <div class="row justify-content-center">
                    <input type="text" asp-for="UserName" />
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="row justify-content-center">
                    <label class="">Введите пароль:</label>
                </div>
                <div class="row justify-content-center">
                    <input type="text" name="password" />
                </div>
                <div class="m-2">
                    <input class="btn btn-info p-2 text-center" type="submit" value="Зарегистрироваться" />
                </div>
            </form>



            @*<h3>Выберите файл для загрузки</h3>
            <form method="post" enctype="multipart/form-data">
                <input type="file" name="uploadedFile" /><br>
                <input type="submit" value="Загрузить" />
            </form>*@
        </div>

    </div>

</div>

